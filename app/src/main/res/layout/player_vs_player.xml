<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:id="@+id/top_label">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pause"
            android:id="@+id/top_indicator_pause"
            android:rotation="180"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"/>

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_play"
            android:id="@+id/top_indicator_play"
            android:rotation="180"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimaryDark"
            android:text=""
            android:textStyle="bold"
            android:rotation="180"
            android:id="@+id/top_info"
            android:fontFamily="monospace"
            android:textSize="18sp"
            android:gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="3"
        android:weightSum="6"
        android:orientation="vertical"
        android:id="@+id/board">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/line_1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_2"/>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:id="@+id/line_2">

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_3"/>

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_4"/>

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_5"/>
            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_6"/>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/line_3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_7"/>

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_8"/>

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_9"/>

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_10"/>

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_11"/>




        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:id="@+id/line_4">

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_12"/>

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_13"/>
            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_14"/>

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_15"/>
            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_16"/>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/line_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_17"/>

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_18"/>
            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_19"/>

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_20"/>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/line_6"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_21"/>

            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/empty_dot"
                android:layout_margin="4sp"
                android:id="@+id/dot_22"/>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:id="@+id/bottom_label">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pause"
            android:id="@+id/bottom_indicator_pause"
            android:layout_marginLeft="10sp"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_play"
            android:id="@+id/bottom_indicator_play"
            android:layout_marginLeft="10sp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimaryDark"
            android:text=""
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textSize="18sp"
            android:id="@+id/bottom_info"/>

     </RelativeLayout>

</LinearLayout>